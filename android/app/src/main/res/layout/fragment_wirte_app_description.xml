<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:android.support.design="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context=".ui.write.app.WriteDescriptionFragment">


    <TextView
        style="@style/RegisterTitleTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_review_date"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_7day"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="9dp"
            android:layout_weight="1"
            android:background="@drawable/selector_btn_color"
            android:text="@string/action_during_7_day"
            android:textColor="@color/selector_btn_text_color"
            android:textSize="14sp"/>

        <Button
            android:id="@+id/btn_14day"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="9dp"
            android:layout_weight="1"
            android:background="@drawable/selector_btn_color"
            android:text="@string/action_during_14_day"
            android:textColor="@color/selector_btn_text_color"
            android:textSize="14sp"/>

    </LinearLayout>


    <TextView
        style="@style/RegisterTitleTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="@string/text_review_date"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_description"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android.support.design:counterEnabled="true"
        android.support.design:counterMaxLength="200"
        android.support.design:hintEnabled="false">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/et_description"
            style="@style/InputTextStyle"
            android:layout_width="match_parent"
            android:layout_height="227dp"
            android:background="@color/gray_f7f7f7_ff"
            android:gravity="top"
            android:hint="@string/text_hint_service_concept"
            android:maxLength="200"
            android:padding="12dp"
            android:textColor="@color/black_272727_ff"
            android:textSize="12sp"/>
    </android.support.design.widget.TextInputLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="22dp"
              android:orientation="vertical">

    <TextView
        android:id="@+id/tv_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NICKNAME"
        android:textColor="@color/gray_a7a7a7_ff"
        android:textSize="9sp"/>

    <TextView
        android:id="@+id/tv_review"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="REVIEW"
        android:textColor="@color/black_272727_ff"
        android:textSize="12sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_design"
            android:textColor="@color/gray_a7a7a7_ff"
            android:textSize="9sp"/>

        <TextView
            android:id="@+id/tv_design"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:text="DESIGN"
            android:textColor="@color/gray_a7a7a7_ff"
            android:textSize="9sp"/>

        <View
            android:layout_width="1dp"
            android:layout_height="9dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="14dp"
            android:background="@color/gray_e7e7e7_ff"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_useful"
            android:textColor="@color/gray_a7a7a7_ff"
            android:textSize="9sp"/>

        <TextView
            android:id="@+id/tv_useful"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:text="USEFUL"
            android:textColor="@color/gray_a7a7a7_ff"
            android:textSize="9sp"/>

        <View
            android:layout_width="1dp"
            android:layout_height="9dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="14dp"
            android:background="@color/gray_e7e7e7_ff"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_contents"
            android:textColor="@color/gray_a7a7a7_ff"
            android:textSize="9sp"/>

        <TextView
            android:id="@+id/tv_contents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:text="CONTENTS"
            android:textColor="@color/gray_a7a7a7_ff"
            android:textSize="9sp"/>

        <View
            android:layout_width="1dp"
            android:layout_height="9dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="14dp"
            android:background="@color/gray_e7e7e7_ff"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_satisfaction"
            android:textColor="@color/gray_a7a7a7_ff"
            android:textSize="9sp"/>

        <TextView
            android:id="@+id/tv_satisfaction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:text="SATISFACTION"
            android:textColor="@color/gray_a7a7a7_ff"
            android:textSize="9sp"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_marginTop="22dp"
        android:layout_height="1dp"
        android:background="@color/gray_e9e9e9_ff"/>

</LinearLayout>
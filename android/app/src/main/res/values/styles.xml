<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="RegisterTitleTextStyle">
        <item name="android:textSize">9sp</item>
        <item name="android:textColor">@color/gray_a7a7a7_ff</item>
    </style>

    <style name="ServiceNameTextStyle">
        <item name="android:textSize">26sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black_272727_ff</item>
    </style>

    <style name="StoreTextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/gray_575757_ff</item>
    </style>

    <style name="InputTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:textColorHint">@color/gray_d7d7d7_ff</item>
        <item name="android:textColor">@color/black_272727_ff</item>
    </style>

    <style name="StateTextStyle">
        <item name="android:textSize">9sp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/selector_rect_stroke</item>
        <item name="android:textColor">@color/selector_state_text_color</item>
    </style>

</resources>
